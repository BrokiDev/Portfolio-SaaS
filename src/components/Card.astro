---
interface Props {
	title: string;
	img: string;
}

const {  title, img } = Astro.props;
---

<div class="flex flex-col justify-center items-center gap-8 transform hover:scale-105 transition-transform duration-300 hover:drop-shadow-lg cursor-pointer ">
	<img class="" src={img} width="100px" alt="Alt Logo" />
	<h3>{title}</h3>
  </div>

  
